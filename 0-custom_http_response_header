#!/usr/bin/env bash
# This script installs Nginx, configures it to add a custom HTTP response header, 
# and reloads Nginx to apply the changes.

# Update package list and install Nginx
sudo apt-get update -y
sudo apt-get install nginx -y

# Create a custom Nginx configuration file
NGINX_CONF="/etc/nginx/sites-available/default"

# Add the custom header to the Nginx configuration
sudo sed -i '/^server {/a \    add_header X-Served-By $HOSTNAME;' "$NGINX_CONF"

# Reload Nginx to apply changes
sudo service nginx restart
